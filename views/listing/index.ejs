            </div>
            <div class="icons">
                <i class="fa-solid fa-ship"></i>
                <p>Boat house</p>
            </div>
        </div>
        

        <div class="toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked">
                <label class="form-check-label" for="switchCheckChecked">Display total after taxes</label>
            </div>
        </div>
    </div>

        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1" style="margin-left: 3%;">
            <% for(let listing of alllistings){ %>
                <div class="card col listing-card" style="width: 20rem; margin: 5px 5px;">
                    <a href="/listing/<%= listing._id%>" class="card-link">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image"style="height:18rem;">
                        <div class="card-img-overlay"></div>  <!--  used for displaying text over image -->
                        <div class="card-body">
                            <h5 class="card-text"><%= listing.title%></h5>
                            <p class="card-text"><%= listing.description%></p>
                            <p class="card-text">
                              &#8377; 
                              <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                             &nbsp; &nbsp; <i class="tax_info">including 18% gst</i>
                            </p>
                        </div>
                     </a>
                </div>
            <% } %>
        </div>
